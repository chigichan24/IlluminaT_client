<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      style="@style/Theme.AppCompat.Light.DarkActionBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="@string/register_pattern"
      app:titleTextColor="@color/antique_white"
      />
    <TextView
      android:id="@+id/display_pattern_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="@string/display_pattern_name"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      />
    <EditText
      android:id="@+id/pattern_edit_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:hint="@string/display_pattern_regulation_hint"
      android:lines="2"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/display_pattern_label"
      />
    <com.rarepebble.colorpicker.ColorPickerView
      android:id="@+id/color_picker_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:defaultValue="#f00"
      android:key="simplePreference"
      android:title="hoge"
      app:layout_constraintBottom_toTopOf="@id/register_pattern_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/pattern_edit_text"
      />
    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/register_pattern_button"
      style="@style/Widget.MaterialComponents.Button"
      android:layout_width="224dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:paddingTop="32dp"
      android:paddingBottom="32dp"
      android:text="@string/register"
      android:textColor="@color/white_smoke"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>